<div class="article-title d-flex justify-content-between align-items-center">
  <h1><%= @article.title %></h1>
  <div class="article-options">
    <%= link_to edit_article_path(@article) do %>
      <i class="fas fa-pencil-alt"></i>
    <% end %>

    <%= link_to article_path(@article), method: :delete, data: { confirm: 'Are you sure?' } do %>
      <i class="far fa-trash-alt"></i>
    <% end %>
  </div>
</div>
<hr>
<p class="content"><%= @article.content  %></p>

<hr>
<%= link_to articles_path, class: "back" do %>
  <i class="fas fa-undo-alt"></i> Back to articles
<% end %>
